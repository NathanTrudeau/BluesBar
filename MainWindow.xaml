<Window x:Class="BluesBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="CanResize"
        Height="600"
        Width="700"
        Background="#6FC3E2"
        FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- Unified Button Style (same as AimTrain) -->
        <Style TargetType="Button" x:Key="FancyButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="1" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                                <Setter Property="BorderBrush" Value="#77BFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555"/>
                                <Setter Property="BorderBrush" Value="#66A1FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#222"/>
                                <Setter Property="Foreground" Value="#888"/>
                                <Setter Property="BorderBrush" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Big Room Tile Button Style -->
        <Style TargetType="Button" x:Key="RoomTileButton">
            <Setter Property="Background" Value="#222"/>
            <Setter Property="BorderBrush" Value="#FF4169E1"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <Grid Margin="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF63B8FF"/>
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#333"/>
                                <Setter Property="BorderBrush" Value="#77BFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CUSTOM TITLE BAR -->
        <DockPanel Grid.Row="0" Background="#1C1C1C" MouseDown="TitleBar_MouseDown">

            <TextBlock Text="BluesBar"
                       FontFamily="Segoe UI Black"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="RoyalBlue"
                       VerticalAlignment="Center"
                       Margin="10,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Window buttons -->
            <Button Width="32" Height="24" DockPanel.Dock="Right" Content="✕" ToolTip="Close" Foreground="RoyalBlue" Background="White" Click="CloseButton_Click"/>
            <Button Width="32" Height="24" DockPanel.Dock="Right" Content="⬜" ToolTip="Maximize / Restore" Foreground="RoyalBlue" Background="White" Click="MaxRestoreButton_Click"/>
            <Button Width="33" Height="24" DockPanel.Dock="Right" Content="—" ToolTip="Minimize" Foreground="RoyalBlue" Background="White" Click="MinimizeButton_Click"/>

            <DockPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="#444"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#333"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#555"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Resources>

        </DockPanel>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Card: Live Profile Tracker -->
            <Border Grid.Row="0"
        Background="#FF102A5C"
        BorderBrush="#FF4169E1"
        BorderThickness="3"
        CornerRadius="12"
        Padding="16"
        Margin="0,0,0,14">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT: Player tag (placeholder for now) -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="PLAYER"
                       Foreground="#AAAAAA"
                       FontSize="11"
                       Opacity="0.75"/>
                        <TextBlock x:Name="PlayerNameText"
                       Text="Blues"
                       Foreground="White"
                       FontSize="18"
                       FontFamily="Segoe UI Black">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="0" Opacity="0.6"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                    <!-- CENTER: Net Worth (big flex number) -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30,0">
                        <TextBlock Text="NET WORTH"
                       Foreground="#AAAAAA"
                       FontSize="11"
                       Opacity="0.75"
                       HorizontalAlignment="Center"/>
                        <TextBlock x:Name="NetWorthText"
                       Text="1.45B Coins"
                       Foreground="White"
                       FontSize="34"
                       FontFamily="Segoe UI Black"
                       HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="0" Opacity="0.7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                    <!-- RIGHT: Savings (real spendable balance) -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="CURRENT SAVINGS"
                       Foreground="#AAAAAA"
                       FontSize="11"
                       Opacity="0.75"
                       HorizontalAlignment="Right"/>
                        <TextBlock x:Name="SavingsText"
                           Foreground="#FFD700"
                           FontWeight="Bold"/>

                        <!-- Optional tiny hint line (leave blank now, use slogan later) -->
                        <TextBlock x:Name="HeaderHintText"
                       Text=""
                       Foreground="#AAAAAA"
                       FontSize="10"
                       Opacity="0.5"
                       HorizontalAlignment="Right"
                       Margin="0,2,0,0"/>
                    </StackPanel>
                    <Button Content="+10K"
                        Width="28"
                        Height="22"
                        FontSize="10"
                        Margin="149,7,0,0"
                        Style="{StaticResource FancyButton}"
                        Click="DebugEarn_Click" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </Grid>
            </Border>


            <!-- Room tiles -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- BluesAimTrain -->
                <Button Grid.Row="0" Grid.Column="0" Margin="10" Style="{StaticResource RoomTileButton}" Click="OpenAim_Click">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="🎯  BluesAimTrain"
                                   Foreground="White"
                                   FontSize="22"
                                   FontFamily="Segoe UI Black"/>

                        <TextBlock Grid.Row="1"
                                   Text="Train aim, earn currency, flex cosmetics."
                                   Foreground="#DDDDDD"
                                   FontSize="13"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>

                    </Grid>
                </Button>

                <!-- Gambloo -->
                <Button Grid.Row="0" Grid.Column="1" Margin="10" Style="{StaticResource RoomTileButton}" Click="OpenGambloo_Click">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="🎰  Gambloo"
                                   Foreground="White"
                                   FontSize="22"
                                   FontFamily="Segoe UI Black"/>

                        <TextBlock Grid.Row="1"
                                   Text="Blackjack, roulette, slots, jackpot. Pure points."
                                   Foreground="#DDDDDD"
                                   FontSize="13"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>

                    </Grid>
                </Button>

                <!-- Backpack -->
                <Button Grid.Row="1" Grid.Column="0" Margin="10" Style="{StaticResource RoomTileButton}" Click="OpenBackpack_Click">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="🎒  Backpack"
                                   Foreground="White"
                                   FontSize="22"
                                   FontFamily="Segoe UI Black"/>

                        <TextBlock Grid.Row="1"
                                   Text="Equip cursors, backgrounds, sounds, effects."
                                   Foreground="#DDDDDD"
                                   FontSize="13"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>

                    </Grid>
                </Button>

                <!-- Store -->
                <Button Grid.Row="1" Grid.Column="1" Margin="10" Style="{StaticResource RoomTileButton}" Click="OpenStore_Click">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="🛒  Store"
                                   Foreground="White"
                                   FontSize="22"
                                   FontFamily="Segoe UI Black"/>

                        <TextBlock Grid.Row="1"
                                   Text="Spend currency on drops, cosmetics, upgrades."
                                   Foreground="#DDDDDD"
                                   FontSize="13"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>

                    </Grid>
                </Button>

            </Grid>
        </Grid>
    </Grid>
</Window>
