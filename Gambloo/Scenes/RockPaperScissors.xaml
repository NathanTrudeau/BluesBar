<UserControl x:Class="BluesBar.Gambloo.Scenes.RockPaperScissorsScene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0F16">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Panel" Color="#111827"/>
        <SolidColorBrush x:Key="Panel2" Color="#0E1A2F"/>
        <SolidColorBrush x:Key="Stroke" Color="#22324A"/>
        <SolidColorBrush x:Key="Accent" Color="#6FC3E2"/>
        <SolidColorBrush x:Key="TextDim" Color="#9AA3B2"/>

        <Style TargetType="Button" x:Key="NeoButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#182235"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                                <Setter Property="Background" Value="#1F2A40"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#25324C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton" BasedOn="{StaticResource NeoButton}">
            <Setter Property="Background" Value="#2F6D3A"/>
            <Setter Property="BorderBrush" Value="#3FA34D"/>
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>

        <Style TargetType="Border" x:Key="PickTile">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#0B1220"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                CornerRadius="16" Padding="12" Margin="0,0,0,12">
            <DockPanel LastChildFill="False">
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Rock Paper Scissors" Foreground="White" FontFamily="Segoe UI Black" FontSize="18" Width="178"/>
                    <TextBlock x:Name="WalletText" Text="Savings: 0 Coins" Foreground="{StaticResource TextDim}" FontSize="12"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Bet" Foreground="{StaticResource TextDim}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="BetTextBox" Width="140" Height="30" Text="100"
                             Foreground="White" Background="#0B1220"
                             BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                             Padding="8,4" VerticalContentAlignment="Center"/>
                    <Button Content="+1K" Width="70" Margin="10,0,0,0" Style="{StaticResource NeoButton}" Click="BetPlus1k_Click"/>
                    <Button Content="+10K" Width="80" Margin="8,0,0,0" Style="{StaticResource NeoButton}" Click="BetPlus10k_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Arena -->
        <Border Grid.Row="1" Background="{StaticResource Panel2}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                CornerRadius="16" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel>
                    <TextBlock Text="" Foreground="{StaticResource TextDim}" Margin="0,0,170,0" FontSize="12"/>
                    <TextBlock x:Name="HintText" DockPanel.Dock="Right" Text="Win pays x2. Tie returns bet."
                               Foreground="{StaticResource Accent}" FontFamily="Consolas" FontSize="12" Opacity="0.95"/>
                </DockPanel>

                <Grid Grid.Row="1" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource PickTile}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="YOU" Foreground="{StaticResource TextDim}" FontFamily="Segoe UI Black" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="YouPickText" Text="—" Foreground="White" FontFamily="Segoe UI Black" FontSize="44" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Grid.Column="1" Text="VS" Foreground="{StaticResource Accent}" FontFamily="Segoe UI Black"
                               FontSize="22" VerticalAlignment="Center" Margin="8,0"/>

                    <Border Grid.Column="2" Style="{StaticResource PickTile}" Margin="12,0,0,0">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="HOUSE" Foreground="{StaticResource TextDim}" FontFamily="Segoe UI Black" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="HousePickText" Text="—" Foreground="White" FontFamily="Segoe UI Black" FontSize="44" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Controls -->
        <Border Grid.Row="2" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                CornerRadius="16" Padding="12" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="OutcomeText" Text="" Foreground="White" FontFamily="Segoe UI Black" FontSize="13"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ROCK" Width="110" Style="{StaticResource NeoButton}" Click="Rock_Click"/>
                    <Button Content="PAPER" Width="110" Margin="10,0,0,0" Style="{StaticResource NeoButton}" Click="Paper_Click"/>
                    <Button Content="SCISSORS" Width="110" Margin="10,0,0,0" Style="{StaticResource NeoButton}" Click="Scissors_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
