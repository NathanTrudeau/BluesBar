<UserControl x:Class="BluesBar.Gambloo.Scenes.BlinkoScene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0F16"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">

    <UserControl.Resources>
        <!-- Your theme -->
        <SolidColorBrush x:Key="Panel" Color="#111827"/>
        <SolidColorBrush x:Key="Panel2" Color="#0E1A2F"/>
        <SolidColorBrush x:Key="Stroke" Color="#22324A"/>
        <SolidColorBrush x:Key="Accent" Color="#6FC3E2"/>
        <SolidColorBrush x:Key="TextDim" Color="#9AA3B2"/>
        <SolidColorBrush x:Key="Felt" Color="#0B1B16"/>

        <Style TargetType="Button" x:Key="NeoButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#182235"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                                <Setter Property="Background" Value="#1F2A40"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#25324C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton" BasedOn="{StaticResource NeoButton}">
            <Setter Property="Background" Value="#2F6D3A"/>
            <Setter Property="BorderBrush" Value="#3FA34D"/>
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>

        <Style TargetType="Border" x:Key="Pill">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="Background" Value="#0B1220"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelDim">
            <Setter Property="Foreground" Value="{StaticResource TextDim}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header (small, like your other scenes) -->
        <Border Grid.Row="0" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                CornerRadius="16" Padding="12" Margin="0,0,0,12">
            <DockPanel LastChildFill="False">
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Blinko" Foreground="White" FontFamily="Segoe UI Black" FontSize="18"/>
                    <TextBlock x:Name="WalletText" Text="Savings: 0 Coins" Foreground="{StaticResource TextDim}" FontSize="12"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Style="{StaticResource Pill}" Margin="0,0,10,0">
                        <TextBlock x:Name="FpsText" Text="FPS: --" Foreground="{StaticResource Accent}" FontFamily="Consolas" FontSize="12"/>
                    </Border>
                    <Border Style="{StaticResource Pill}">
                        <TextBlock x:Name="BoardHintText" Text="" Foreground="{StaticResource Accent}" FontFamily="Consolas" FontSize="12"/>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main layout: left control panel, center board, right multiplier list -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT CONTROL PANEL (like screenshot) -->
            <Border Grid.Column="0" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                    CornerRadius="16" Padding="14" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- mode tabs (visual only for now) -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border CornerRadius="999" Background="#202B45" BorderBrush="{StaticResource Stroke}" BorderThickness="2" Padding="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" CornerRadius="999" Background="#5B5CF0" Opacity="0.35"/>
                                <TextBlock Grid.Column="0" Text="Manual" Foreground="White" FontFamily="Segoe UI Black" FontSize="12"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,7"/>
                                <TextBlock Grid.Column="1" Text="Auto" Foreground="{StaticResource TextDim}" FontFamily="Segoe UI Black" FontSize="12"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,7"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <TextBlock Grid.Row="1" Text="Bet Amount" Style="{StaticResource LabelDim}" Margin="2,0,0,6"/>
                    <Border Grid.Row="2" Style="{StaticResource Pill}" Padding="12,8" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBox x:Name="BetTextBox"
                                     Text="100"
                                     Foreground="White"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontFamily="Consolas"
                                     FontSize="18"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="1/2" Width="70" Margin="0,0,8,0" Style="{StaticResource NeoButton}" Click="Half_Click"/>
                                <Button Content="2x" Width="70" Style="{StaticResource NeoButton}" Click="Double_Click"/>
                                <Button Content="+1K" Width="70" Margin="8,0,0,0" Style="{StaticResource NeoButton}" Click="BetPlus1k_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <TextBlock Grid.Row="3" Text="Risk" Style="{StaticResource LabelDim}" Margin="2,0,0,6"/>
                    <Border Grid.Row="4" Style="{StaticResource Pill}" Padding="12,10" Margin="0,0,0,12">
                        <StackPanel>
                            <ComboBox x:Name="RiskCombo"
                                      SelectedIndex="1"
                                      Background="#0B1220"
                                      Foreground="White"
                                      BorderBrush="{StaticResource Stroke}"
                                      BorderThickness="2"
                                      Padding="8,6">
                                <ComboBoxItem Content="Low"/>
                                <ComboBoxItem Content="Medium"/>
                                <ComboBoxItem Content="High"/>
                            </ComboBox>

                            <TextBlock Text="Rows" Style="{StaticResource LabelDim}" Margin="2,12,0,6"/>
                            <ComboBox x:Name="RowsCombo"
                                      SelectedIndex="1"
                                      Background="#0B1220"
                                      Foreground="White"
                                      BorderBrush="{StaticResource Stroke}"
                                      BorderThickness="2"
                                      Padding="8,6"
                                      SelectionChanged="RowsCombo_SelectionChanged">
                                <ComboBoxItem Content="12"/>
                                <ComboBoxItem Content="16"/>
                                <ComboBoxItem Content="18"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <TextBlock Grid.Row="5" x:Name="OutcomeText"
                               Text=""
                               Foreground="White"
                               FontFamily="Segoe UI Black"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="2,0,0,10"/>

                    <Button Grid.Row="6" x:Name="DropButton" Content="Bet"
                            Height="60"
                            Style="{StaticResource PrimaryButton}"
                            Click="Drop_Click"/>
                </Grid>
            </Border>

            <!-- CENTER BOARD -->
            <Border Grid.Column="1" Background="{StaticResource Panel2}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                    CornerRadius="16" Padding="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- board visual: static peg layer is an Image, balls are on top -->
                    <Grid Grid.Row="0">
                        <Canvas x:Name="BoardCanvas" Background="{StaticResource Felt}">
                            <Image x:Name="PegLayerImage"
                                   IsHitTestVisible="False"
                                   SnapsToDevicePixels="True"
                                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                                   CacheMode="BitmapCache"/>
                            <Canvas x:Name="BallLayer"
                                    IsHitTestVisible="False"
                                    CacheMode="BitmapCache"/>
                        </Canvas>
                    </Grid>

                    <!-- bottom buckets -->
                    <UniformGrid Grid.Row="1" x:Name="BucketGrid" Rows="1" Columns="17" Margin="0,14,0,0"/>
                </Grid>
            </Border>

            <!-- RIGHT MULTIPLIER LIST (optional vibe like screenshot) -->
            <Border Grid.Column="2" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                    CornerRadius="16" Padding="10" Margin="12,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="RightMultiplierStack"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>


