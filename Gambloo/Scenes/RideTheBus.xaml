<UserControl x:Class="BluesBar.Gambloo.Scenes.RideTheBusScene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0F16">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Panel" Color="#111827"/>
        <SolidColorBrush x:Key="Panel2" Color="#0E1A2F"/>
        <SolidColorBrush x:Key="Stroke" Color="#22324A"/>
        <SolidColorBrush x:Key="Accent" Color="#6FC3E2"/>
        <SolidColorBrush x:Key="TextDim" Color="#9AA3B2"/>

        <!-- Button style -->
        <Style TargetType="Button" x:Key="NeoButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#182235"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                                <Setter Property="Background" Value="#1F2A40"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#25324C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- “Emergency” small button (Rebet&Spin vibes, or Cashout danger) -->
        <Style TargetType="Button" x:Key="EmergencyButton" BasedOn="{StaticResource NeoButton}">
            <Setter Property="Background" Value="#3B1118"/>
            <Setter Property="BorderBrush" Value="#B91C1C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FCA5A5"/>
                                <Setter Property="Background" Value="#4C1620"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5A1B26"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card face -->
        <Style TargetType="Border" x:Key="CardFace">
            <Setter Property="Width" Value="92"/>
            <Setter Property="Height" Value="128"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="Background" Value="#0B1220"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="0" Opacity="0.40"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="CardText">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                CornerRadius="16" Padding="12" Margin="0,0,0,12">
            <DockPanel LastChildFill="False">
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Ride The Bus" Foreground="White" FontFamily="Segoe UI Black" FontSize="18"/>
                    <TextBlock x:Name="WalletText" Text="Savings: 0 Coins" Foreground="{StaticResource TextDim}" FontSize="12"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Bet" Foreground="{StaticResource TextDim}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="ChipTextBox" Width="140" Height="30" Text="100"
                             Foreground="White" Background="#0B1220"
                             BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                             Padding="8,4" VerticalContentAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- MAIN TABLE -->
        <Border Grid.Row="1" Background="{StaticResource Panel2}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                CornerRadius="16" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- HUD -->
                    <RowDefinition Height="*"/>
                    <!-- CENTER area -->
                    <RowDefinition Height="Auto"/>
                    <!-- Step buttons -->
                    <RowDefinition Height="Auto"/>
                    <!-- Rules -->
                </Grid.RowDefinitions>

                <!-- HUD -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="StatusText"
                               Text="Start a round."
                               Foreground="{StaticResource TextDim}"
                               FontSize="13"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" x:Name="StakeText"
                               Text="Stake: 0"
                               Foreground="White"
                               FontFamily="Segoe UI Black"
                               FontSize="12"
                               Margin="16,0,0,0"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2" x:Name="MultText"
                               Text="x1.00"
                               Foreground="{StaticResource Accent}"
                               FontFamily="Consolas"
                               FontSize="13"
                               Margin="16,0,0,0"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="3" x:Name="PayoutText"
                               Text="Cashout: -"
                               Foreground="{StaticResource Accent}"
                               FontFamily="Consolas"
                               FontSize="13"
                               Margin="16,0,0,0"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Cards row -->
                <Grid Grid.Row="1">
                    <StackPanel x:Name="CardsPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,6,0,6">
                        <Border Style="{StaticResource CardFace}">
                            <TextBlock x:Name="Card1Text" Text="BB" Style="{StaticResource CardText}"/>
                        </Border>
                        <Border Style="{StaticResource CardFace}">
                            <TextBlock x:Name="Card2Text" Text="BB" Style="{StaticResource CardText}"/>
                        </Border>
                        <Border Style="{StaticResource CardFace}">
                            <TextBlock x:Name="Card3Text" Text="BB" Style="{StaticResource CardText}"/>
                        </Border>
                        <Border Style="{StaticResource CardFace}" Margin="0,0,0,0">
                            <TextBlock x:Name="Card4Text" Text="BB" Style="{StaticResource CardText}"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Step buttons (only one panel visible at a time, driven by code) -->
                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <!-- COLOR -->
                    <StackPanel x:Name="ColorPanel" Orientation="Horizontal" Visibility="Collapsed">
                        <Button Content="RED" Width="140" Margin="0,0,10,0"
                                Background="#6A1212" BorderBrush="#B91C1C"
                                Style="{StaticResource NeoButton}" Click="GuessRed_Click"/>
                        <Button Content="BLACK" Width="140"
                                Background="#101010" BorderBrush="#3B4457"
                                Style="{StaticResource NeoButton}" Click="GuessBlack_Click"/>
                    </StackPanel>

                    <!-- HIGH/LOW -->
                    <StackPanel x:Name="HighLowPanel" Orientation="Horizontal" Visibility="Collapsed">
                        <Button Content="HIGHER" Width="140" Margin="0,0,10,0"
                                Style="{StaticResource NeoButton}" Click="GuessHigh_Click"/>
                        <Button Content="LOWER" Width="140"
                                Style="{StaticResource NeoButton}" Click="GuessLow_Click"/>
                    </StackPanel>

                    <!-- IN/OUT -->
                    <StackPanel x:Name="InOutPanel" Orientation="Horizontal" Visibility="Collapsed">
                        <Button Content="INSIDE" Width="140" Margin="0,0,10,0"
                                Style="{StaticResource NeoButton}" Click="GuessInside_Click"/>
                        <Button Content="OUTSIDE" Width="140"
                                Style="{StaticResource NeoButton}" Click="GuessOutside_Click"/>
                    </StackPanel>

                    <!-- SUIT -->
                    <UniformGrid x:Name="SuitPanel" Rows="1" Columns="4" Visibility="Collapsed">
                        <Button Content="♣ CLUBS" Margin="0,0,10,0"
                                Style="{StaticResource NeoButton}" Click="GuessSuitClubs_Click"/>
                        <Button Content="♦ DIAMONDS" Margin="0,0,10,0"
                                Style="{StaticResource NeoButton}" Click="GuessSuitDiamonds_Click"/>
                        <Button Content="♥ HEARTS" Margin="0,0,10,0"
                                Style="{StaticResource NeoButton}" Click="GuessSuitHearts_Click"/>
                        <Button Content="♠ SPADES"
                                Style="{StaticResource NeoButton}" Click="GuessSuitSpades_Click"/>
                    </UniformGrid>
                </Grid>

                <!-- Flavor text / instructions -->
                <TextBlock Grid.Row="3"
                           Text="Rules: Equal rank counts as a loss. Boundary hits on INSIDE/OUTSIDE count as a loss. Cash out after Step 1 if you’re feeling civilized."
                           Foreground="{StaticResource TextDim}"
                           FontSize="12"
                           Opacity="0.85"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- CONTROLS FOOTER -->
        <Border Grid.Row="2" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                CornerRadius="16" Padding="12" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="OutcomeText"
                           Text=""
                           Foreground="White"
                           FontFamily="Segoe UI Black"
                           FontSize="13"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        x:Name="CashOutButton"
                        Content="CASH OUT"
                        Width="140"
                        Margin="0,0,10,0"
                        Style="{StaticResource EmergencyButton}"
                        Click="CashOut_Click"/>

                <Button Grid.Column="2"
                        x:Name="StartButton"
                        Content="START"
                        Width="140"
                        Style="{StaticResource NeoButton}"
                        Click="StartRound_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

