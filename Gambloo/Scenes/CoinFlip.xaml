<UserControl x:Class="BluesBar.Gambloo.Scenes.CoinFlipScene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0F16">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Panel" Color="#111827"/>
        <SolidColorBrush x:Key="Panel2" Color="#0E1A2F"/>
        <SolidColorBrush x:Key="Stroke" Color="#22324A"/>
        <SolidColorBrush x:Key="Accent" Color="#6FC3E2"/>
        <SolidColorBrush x:Key="TextDim" Color="#9AA3B2"/>

        <Style TargetType="Button" x:Key="NeoButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#182235"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                                <Setter Property="Background" Value="#1F2A40"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#25324C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton" BasedOn="{StaticResource NeoButton}">
            <Setter Property="Background" Value="#2F6D3A"/>
            <Setter Property="BorderBrush" Value="#3FA34D"/>
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>

        <Style TargetType="Button" x:Key="EmergencyButton" BasedOn="{StaticResource NeoButton}">
            <Setter Property="Background" Value="#3B1118"/>
            <Setter Property="BorderBrush" Value="#B91C1C"/>
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                CornerRadius="16" Padding="12" Margin="0,0,0,12">
            <DockPanel LastChildFill="False">
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="CoinFlip" Foreground="White" FontFamily="Segoe UI Black" FontSize="18"/>
                    <TextBlock x:Name="WalletText" Text="Savings: 0 Coins" Foreground="{StaticResource TextDim}" FontSize="12"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Bet" Foreground="{StaticResource TextDim}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="BetTextBox" Width="140" Height="30" Text="100"
                             Foreground="White" Background="#0B1220"
                             BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                             Padding="8,4" VerticalContentAlignment="Center"/>
                    <Button Content="+1K" Width="70" Margin="10,0,0,0" Style="{StaticResource NeoButton}" Click="BetPlus1k_Click"/>
                    <Button Content="+10K" Width="80" Margin="8,0,0,0" Style="{StaticResource NeoButton}" Click="BetPlus10k_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Arena -->
        <Border Grid.Row="1" Background="{StaticResource Panel2}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                CornerRadius="16" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="HintText" Text="Pick a side. Flip is double-or-nothing."
                           Foreground="{StaticResource TextDim}" FontSize="12" Opacity="0.95"/>

                <!-- Coin -->
                <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border x:Name="Coin"
                            Width="170" Height="170"
                            CornerRadius="85"
                            Background="#6F73E2"
                            BorderBrush="{StaticResource Accent}"
                            BorderThickness="4"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="CoinScale" ScaleX="1" ScaleY="1"/>
                                <RotateTransform x:Name="CoinRot" Angle="0"/>
                            </TransformGroup>
                        </Border.RenderTransform>

                        <Grid>
                            <TextBlock x:Name="CoinText"
                                       Text="BB"
                                       Foreground="#0B1220"
                                       FontFamily="Segoe UI Black"
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="CoinSub"
                                       Text="HEADS"
                                       Foreground="#0B1220"
                                       FontFamily="Consolas"
                                       FontSize="14"
                                       Opacity="0.75"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,26"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- choice buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="HeadsButton" Content="HEADS" Width="120" Margin="0,0,12,0"
                            Style="{StaticResource NeoButton}" Click="Heads_Click"/>
                    <Button x:Name="TailsButton" Content="TAILS" Width="120" Margin="0,0,12,0"
                            Style="{StaticResource NeoButton}" Click="Tails_Click"/>
                    <Button x:Name="FlipButton" Content="FLIP" Width="140"
                            Style="{StaticResource PrimaryButton}" Click="Flip_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2"
                CornerRadius="16" Padding="12" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="OutcomeText" Text="" Foreground="White" FontFamily="Segoe UI Black" FontSize="13"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1" x:Name="RebetFlipButton"
                        Content="REBET + FLIP"
                        Width="140"
                        Style="{StaticResource EmergencyButton}"
                        Click="RebetFlip_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
