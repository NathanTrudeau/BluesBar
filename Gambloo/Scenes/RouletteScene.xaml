<UserControl x:Class="BluesBar.Gambloo.Scenes.RouletteScene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#0B0F16">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Bg" Color="#0B0F16"/>
        <SolidColorBrush x:Key="Panel" Color="#111827"/>
        <SolidColorBrush x:Key="Panel2" Color="#0E1A2F"/>
        <SolidColorBrush x:Key="Stroke" Color="#22324A"/>
        <SolidColorBrush x:Key="Accent" Color="#6FC3E2"/>
        <SolidColorBrush x:Key="TextDim" Color="#9AA3B2"/>

        <!-- Chip style -->
        <Style x:Key="ChipPuck" TargetType="Border">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="CornerRadius" Value="17"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.45"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button style -->
        <Style TargetType="Button" x:Key="NeoButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#182235"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                                <Setter Property="Background" Value="#1F2A40"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#25324C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="210"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="140"/>
        </Grid.RowDefinitions>

        <!-- TOP: Wheel + History -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Wheel Panel -->
            <Border Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2" CornerRadius="16" Padding="12" Margin="0,0,12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Wheel -->
                    <Grid>
                        <!-- pointer -->
                        <Polygon Points="0,0 18,0 9,18"
                                 Fill="{StaticResource Accent}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Top"
                                 Margin="0,6,0,0"/>

                        <Canvas x:Name="WheelCanvas"
                                Width="180" Height="180"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                SnapsToDevicePixels="True">
                            <Canvas.RenderTransform>
                                <RotateTransform x:Name="WheelRotate" Angle="0" CenterX="90" CenterY="90"/>
                            </Canvas.RenderTransform>
                        </Canvas>

                        <!-- landing ring -->
                        <Ellipse x:Name="WheelLandingRing"
                                 Width="194" Height="194"
                                 Stroke="{StaticResource Accent}"
                                 StrokeThickness="4"
                                 Opacity="0.0"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Result -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="RESULT"
                                   Foreground="{StaticResource TextDim}"
                                   FontFamily="Segoe UI Black"
                                   FontSize="12"
                                   HorizontalAlignment="Center"/>

                        <Border x:Name="ResultChip"
                                Background="#111"
                                BorderBrush="{StaticResource Stroke}"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="10">
                            <TextBlock x:Name="ResultText"
                                       Text="--"
                                       Foreground="White"
                                       FontFamily="Consolas"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <Border x:Name="ResultColorChip"
                                Background="#111"
                                BorderBrush="{StaticResource Stroke}"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="8">
                            <TextBlock x:Name="ResultColorText"
                                       Text="-"
                                       Foreground="White"
                                       FontFamily="Consolas"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <TextBlock x:Name="LandingText"
                                   Text=""
                                   Foreground="{StaticResource Accent}"
                                   FontFamily="Segoe UI Black"
                                   FontSize="12"
                                   Opacity="0.0"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="OutcomeText"
                           Text=""
                           Foreground="White"
                           FontFamily="Consolas"
                           FontSize="12"
                           Opacity="0.9"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- History Panel (color-driven squares w number text) -->
            <Border Grid.Column="1" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2" CornerRadius="16" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel>
                        <TextBlock Text="Game History"
                                   Foreground="{StaticResource TextDim}"
                                   FontFamily="Segoe UI Black"
                                   FontSize="12"/>
                        <Button DockPanel.Dock="Right"
                                Content="Clear"
                                Width="60"
                                Style="{StaticResource NeoButton}"
                                Click="ClearHistory_Click"/>
                    </DockPanel>

                    <Border x:Name="HistoryPanel" Grid.Row="1">
                        <ScrollViewer Grid.Row="1"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Hidden"
                              Margin="0,10,0,0">

                            <UniformGrid x:Name="HistoryTiles"
                                 Columns="12"
                                 HorizontalAlignment="Stretch"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- MIDDLE: TABLE (wide) -->
        <Border Grid.Row="1" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="2" CornerRadius="16" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel>
                    <TextBlock Text="TABLE"
                               Foreground="White"
                               FontFamily="Segoe UI Black"
                               Margin="0,0,10,0"
                               FontSize="14"/>
                    <TextBlock x:Name="HoverBetText"
                               DockPanel.Dock="Right"
                               Text=""
                               Foreground="{StaticResource Accent}"
                               FontFamily="Consolas"
                               FontSize="12"
                               Opacity="0.95"/>
                </DockPanel>

                <!-- Table + chip overlay -->
                <Grid Grid.Row="1" Margin="0,12,0,0">
                    <Canvas x:Name="TableCanvas" Background="#0F2A18"/>
                    <Canvas x:Name="ChipOverlayCanvas" Background="Transparent" IsHitTestVisible="False"/>
                </Grid>
            </Grid>
        </Border>

        <!-- BOTTOM: Chip row + actions + Bet -->
        <Border Grid.Row="2" Background="{StaticResource Panel2}" BorderBrush="{StaticResource Stroke}" BorderThickness="2" CornerRadius="16" Padding="12" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- left: chips + actions -->
                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <DockPanel>
                        <TextBlock x:Name="WalletText"
                                   Text="Savings: 0 Coins"
                                   Foreground="{StaticResource TextDim}"
                                   FontFamily="Segoe UI"
                                   Margin="0,2,50,0"
                                   FontSize="12"/>
                        <TextBlock x:Name="NetWorthText"
                           Text="Net Worth: $0"
                           Foreground="{StaticResource TextDim}"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           Opacity="0.75"
                           Margin="0,2,80,0"/>

                        <TextBlock x:Name="TotalStakeText"
                                   DockPanel.Dock="Right"
                                   Text="Stake: 0"
                                   Foreground="White"
                                   FontFamily="Segoe UI Black"
                                   FontSize="12"/>
                    </DockPanel>

                    <!-- chip selector -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Chip"
                                   Foreground="{StaticResource TextDim}"
                                   VerticalAlignment="Center"/>

                        <Border x:Name="Chip1"
                                Style="{StaticResource ChipPuck}"
                                MouseLeftButtonUp="ChipPreset_Click"
                                Tag="100">
                            <Grid>
                                <TextBlock Text="1"
                                           Foreground="#111"
                                           FontFamily="Segoe UI Black"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border x:Name="Chip2"
                                Style="{StaticResource ChipPuck}"
                                MouseLeftButtonUp="ChipPreset_Click"
                                Tag="1000"
                                Background="#F59E0B">
                            <Grid>
                                <TextBlock Text="2"
                                           Foreground="#111"
                                           FontFamily="Segoe UI Black"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border x:Name="Chip5"
                                Style="{StaticResource ChipPuck}"
                                MouseLeftButtonUp="ChipPreset_Click"
                                Tag="5000"
                                Background="#EC4899">
                            <Grid>
                                <TextBlock Text="5"
                                           Foreground="White"
                                           FontFamily="Segoe UI Black"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <TextBox x:Name="ChipTextBox"
                                 Width="110"
                                 Height="30"
                                 Text="100"
                                 Margin="12,0,0,0"
                                 Foreground="White"
                                 Background="#0B1220"
                                 BorderBrush="{StaticResource Stroke}"
                                 BorderThickness="2"
                                 Padding="8,4"
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Undo" Width="90" Style="{StaticResource NeoButton}" Click="UndoBet_Click" Height="30"/>
                        <Button Content="Rebet" Width="90" Style="{StaticResource NeoButton}" Click="Rebet_Click" Margin="10,0,0,0" Height="30"/>
                        <Button Content="Clear" Width="90" Style="{StaticResource NeoButton}" Click="ClearBets_Click" Margin="10,0,50,0" Height="30"/>
                        <Button Content="REBET + SPIN"
                                Width="84"
                                Background="#3B0A0A"
                                BorderBrush="#EF4444"
                                BorderThickness="2"
                                Foreground="White"
                                FontFamily="Segoe UI Black"
                                FontSize="11"
                                Padding="0,0"
                                Click="RebetAndSpin_Click" Height="36"/>
                    </StackPanel>

                    <!-- actions -->

                    <!-- emergency: intentionally small, scary-looking -->
                </StackPanel>

                <!-- right: BET button -->
                <Button Grid.Column="1"
                        x:Name="SpinButton"
                        Content="SPIN"
                        Width="240"
                        Height="96"
                        FontFamily="Segoe UI Black"
                        FontSize="22"
                        Background="#2F6D3A"
                        BorderBrush="#3FA34D"
                        BorderThickness="2"
                        Click="Spin_Click"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>
