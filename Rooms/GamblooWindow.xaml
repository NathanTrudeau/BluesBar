<Window x:Class="BluesBar.Rooms.GamblooWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="CanResize"
        Height="800"
        Width="1000"
        Background="#101"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CUSTOM TITLE BAR -->
        <DockPanel Grid.Row="0" Background="#1C1C1C" MouseDown="TitleBar_MouseDown">

            <TextBlock Text="Gambloo"
                       FontFamily="Segoe UI Black"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="RoyalBlue"
                       VerticalAlignment="Center"
                       Margin="10,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Window buttons -->
            <Button Width="32" Height="24" DockPanel.Dock="Right" Content="✕" ToolTip="Close" Foreground="RoyalBlue" Background="White" Click="CloseButton_Click"/>
            <Button Width="32" Height="24" DockPanel.Dock="Right" Content="⬜" ToolTip="Maximize / Restore" Foreground="RoyalBlue" Background="White" Click="MaxRestoreButton_Click"/>
            <Button Width="32" Height="24" DockPanel.Dock="Right" Content="—" ToolTip="Minimize" Foreground="RoyalBlue" Background="White" Click="MinimizeButton_Click"/>

            <!-- Nav buttons (same header bar) -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="18,0" DockPanel.Dock="Left">
                <Button Content="Blackjack" Margin="0,0,8,0" Click="NavBlackjack_Click"/>
                <Button Content="Roulette" Margin="0,0,8,0" Click="NavRoulette_Click"/>
                <Button Content="Slots" Margin="0,0,8,0" Click="NavSlots_Click"/>
                <Button Content="RocketCrash" Margin="0,0,8,0" Click="NavRocketCrash_Click"/>
            </StackPanel>

            <!-- Busy / status -->
            <TextBlock x:Name="StatusText"
                       Text=""
                       Foreground="#AAAAAA"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Margin="10,0"
                       DockPanel.Dock="Right"/>

            <DockPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="#444"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="8,2"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="BorderBrush" Value="#77BFFF"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#555"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Resources>
        </DockPanel>

        <!-- MAIN CONTENT: active game scene goes here -->
        <Border Grid.Row="1" Margin="16"
                Background="#FF2E2E2E"
                BorderBrush="#FF4169E1"
                BorderThickness="3"
                CornerRadius="12"
                Padding="12">
            <ContentControl x:Name="SceneHost"/>
        </Border>

        <!-- Optional: click-block overlay when busy (prevents button spam) -->
        <Border x:Name="BusyOverlay"
                Grid.RowSpan="2"
                Background="#66000000"
                Visibility="Collapsed"
                IsHitTestVisible="True">
            <TextBlock Text="In progress…"
                       Foreground="White"
                       FontSize="20"
                       FontFamily="Segoe UI Black"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

    </Grid>
</Window>
